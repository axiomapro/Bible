<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.niv.bible">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/> <!-- Добавить новое разрешение для показа рекламы на Android 13 -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <queries>
        <package android:name="com.google.android.gm" />
    </queries>

    <application
        android:name=".component.immutable.box.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bible"
        android:dataExtractionRules="@xml/data_extraction_rules">
        <!-- Новый параметр exported, он необходим для Android 13, только один имеет значение true, это экран заставки -->
        <activity android:exported="false" android:name="ru.niv.bible.MainActivity" android:hardwareAccelerated="true" android:screenOrientation="portrait" android:configChanges="screenSize|keyboardHidden"/>
        <!-- Новый параметр exported, он необходим для Android 13, только один имеет значение true, это экран заставки -->
        <activity android:exported="true" android:name="ru.niv.bible.SplashActivity" android:screenOrientation="portrait" android:configChanges="screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Новый параметр exported, он необходим для Android 13, только один имеет значение true, это экран заставки -->
        <receiver android:enabled="true" android:exported="false" android:name=".component.mutable.receiver.RebootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".component.mutable.receiver.AlertReceiver"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5337279788139159~7224687319"/>
    </application>

</manifest>