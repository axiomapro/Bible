<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/mainBackground"
    android:overScrollMode="never"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingEnd="20dp"
            android:background="@drawable/gradient"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewBack"
                    android:src="@drawable/ic_back_toolbar"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textViewToolbar"
                    android:text="@string/feedback"
                    android:textSize="20sp"
                    android:textColor="?attr/mainToolbarTitle"
                    android:layout_columnWeight="1"
                    android:paddingStart="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </GridLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/feedback_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/feedbackTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/feedback_text"
                android:textSize="15sp"
                android:textColor="?attr/feedbackText"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/feedback_help_us"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/feedbackHelpUs"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <GridLayout
                android:id="@+id/gridLayoutRate"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_feedback_googleplay"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/feedback_rate"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/feedbackName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="?attr/feedbackDescription"
                        android:text="@string/feedback_rate_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </GridLayout>

            <GridLayout
                android:id="@+id/gridLayoutShare"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_share_feedback"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/feedback_share"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/feedbackName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="?attr/feedbackDescription"
                        android:text="@string/feedback_share_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </GridLayout>

            <GridLayout
                android:id="@+id/gridLayoutContact"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_feedback_contact"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/feedback_contact"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/feedbackName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="?attr/feedbackDescription"
                        android:text="@string/feedback_contact_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </GridLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewPolicy"
            android:text="@string/feedback_policy"
            android:textSize="15sp"
            android:textColor="?attr/feedbackPolicy"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>